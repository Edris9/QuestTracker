<Window x:Class="QuestTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚔️ Quest Guild Terminal - Quest Manager" 
        Height="700" 
        Width="1000"
        Background="#1a1a2e"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR MENU -->
        <StackPanel Grid.Column="0" Background="#0f0f1e" Margin="15">

            <!-- Hjältenamn -->
            <TextBlock x:Name="HeroNameDisplay" 
                       Text="Hjälte: " 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#00ff88" 
                       Margin="0,0,0,20"
                       TextWrapping="Wrap"/>

            <!-- Menu Buttons -->
            <Button x:Name="AddQuestBtn" 
                    Content="➕ Lägg till Quest" 
                    Height="40" 
                    Background="#00ff88" 
                    Foreground="#1a1a2e" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="AddQuest_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <Button x:Name="ViewQuestsBtn" 
                    Content="👀 Visa Quests" 
                    Height="40" 
                    Background="#444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="ViewQuests_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <Button x:Name="UpdateQuestBtn" 
                    Content="✏️ Uppdatera Quest" 
                    Height="40" 
                    Background="#444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="UpdateQuest_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <Button x:Name="AchievementsBtn" 
                    Content="🏆 Achievements" 
                    Height="40" 
                    Background="#444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="Achievements_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <Button x:Name="AIAdvisorBtn" 
                    Content="🤖 Guild Advisor" 
                    Height="40" 
                    Background="#444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="AIAdvisor_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <Button x:Name="ReportBtn" 
                    Content="📊 Guild Rapport" 
                    Height="40" 
                    Background="#444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"   
                    Click="Report_Click"
                    Cursor="Hand"
                    Margin="0,0,0,30"/>


            <Button x:Name="LogoutBtn" 
                    Content="👋 Logga Ut" 
                    Height="40" 
                    Background="#ff4444" 
                    Foreground="White" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Click="Logout_Click"
                    Cursor="Hand"
                    VerticalAlignment="Bottom"/>

        </StackPanel>

        <!-- RIGHT MAIN CONTENT AREA -->
        <StackPanel Grid.Column="1" Margin="30">

            <!-- Header -->
            <TextBlock Text="⚔️ QUEST GUILD TERMINAL" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#00ff88" 
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="ContentTitle" 
                       Text="Välkommen till din Quest-lista" 
                       FontSize="18" 
                       Foreground="#aaaaaa" 
                       Margin="0,0,0,30"/>

            <!-- Main Content Area (scrollable) -->
            <ScrollViewer Height="550" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ContentPanel">
                    <!-- Innehål läggs här dynamiskt -->
                </StackPanel>
            </ScrollViewer>

        </StackPanel>

    </Grid>
</Window>