<Window x:Class="QuestTracker.Views.TwoFAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔐 2FA Verifiering" 
        Height="350" 
        Width="500"
        Background="#1a1a2e"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Border för rounded corners -->
        <Border CornerRadius="10" Background="#1a1a2e" BorderBrush="#00ff88" BorderThickness="2" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                <!-- Header -->
                <TextBlock Text="🔐 TVÅFAKTORSAUTENTISERING" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#00ff88" 
                           TextAlignment="Center" 
                           Margin="0,20,0,10"/>

                <TextBlock Text="En verifieringskod har skickats till din email/SMS" 
                           FontSize="12" 
                           Foreground="#aaaaaa" 
                           TextAlignment="Center" 
                           Margin="0,0,0,30"
                           TextWrapping="Wrap"/>

                <!-- Input för kod -->
                <TextBlock Text="Ange 6-siffrig kod:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,10"/>
                <TextBox x:Name="TwoFACodeInput" 
                         Height="50" 
                         Padding="10" 
                         Background="#2a2a3e" 
                         Foreground="White"
                         BorderBrush="#00ff88"
                         BorderThickness="2"
                         Margin="0,0,0,20"
                         FontSize="18"
                         TextAlignment="Center"
                         MaxLength="6"/>

                <!-- Verifiera knapp -->
                <Button x:Name="VerifyButton"
                        Content="VERIFIERA KOD ✓" 
                        Height="45" 
                        Background="#00ff88" 
                        Foreground="#1a1a2e" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="VerifyButton_Click"
                        Cursor="Hand"
                        Margin="0,0,0,15"/>

                <!-- Felmeddelande -->
                <TextBlock x:Name="ErrorMessage" 
                           Foreground="#ff4444" 
                           FontSize="12" 
                           TextAlignment="Center"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"/>

                <!-- Avbryt knapp -->
                <Button Content="AVBRYT" 
                        Height="40" 
                        Background="#444" 
                        Foreground="White" 
                        FontSize="12" 
                        FontWeight="Bold"
                        Click="CancelButton_Click"
                        Cursor="Hand"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>