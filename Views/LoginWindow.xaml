<Window x:Class="QuestTracker.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚔️ Quest Guild Terminal - Inloggning" 
        Height="500" 
        Width="600"
        Background="#1a1a2e"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Container -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">

            <!-- Header -->
            <TextBlock Text="⚔️ QUEST GUILD TERMINAL" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#00ff88" 
                       TextAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Logga in eller registrera dig" 
                       FontSize="14" 
                       Foreground="#aaaaaa" 
                       TextAlignment="Center" 
                       Margin="0,0,0,30"/>

            <!-- Tab Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="LoginTabBtn" 
                        Content="🔓 LOGGA IN" 
                        Width="220" 
                        Height="40"
                        Background="#00ff88"
                        Foreground="#1a1a2e"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="LoginTab_Click"
                        Cursor="Hand"/>

                <Button x:Name="RegisterTabBtn" 
                        Content="✍️ REGISTRERA" 
                        Width="220" 
                        Height="40"
                        Background="#444"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Bold"
                        Margin="10,0,0,0"
                        Click="RegisterTab_Click"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- LOGIN PANEL -->
            <StackPanel x:Name="LoginPanel" Visibility="Visible">
                <!-- Användarnamn -->
                <TextBlock Text="Hjältenamn:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginUsername" 
                         Height="40" 
                         Padding="10" 
                         Background="#2a2a3e" 
                         Foreground="White"
                         BorderBrush="#00ff88"
                         BorderThickness="2"
                         Margin="0,0,0,15"
                         FontSize="14" TextChanged="LoginUsername_TextChanged"/>

                <!-- Lösenord -->
                <TextBlock Text="Lösenord:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,5"/>
                <PasswordBox x:Name="LoginPassword" 
                             Height="40" 
                             Padding="10" 
                             Background="#2a2a3e" 
                             Foreground="White"
                             BorderBrush="#00ff88"
                             BorderThickness="2"
                             Margin="0,0,0,20"
                             FontSize="14"/>

                <!-- Logga In Knapp -->
                <Button Content="LOGGA IN ➜" 
                        Height="45" 
                        Background="#00ff88" 
                        Foreground="#1a1a2e" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="LoginButton_Click"
                        Cursor="Hand"
                        Margin="0,0,0,15"/>

                <!-- Felmeddelande -->
                <TextBlock x:Name="LoginErrorMessage" 
                           Foreground="#ff4444" 
                           FontSize="12" 
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>
            </StackPanel>

            <!-- REGISTER PANEL -->
            <StackPanel x:Name="RegisterPanel" Visibility="Collapsed">
                <!-- Användarnamn -->
                <TextBlock Text="Nytt hjältenamn:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,5"/>
                <TextBox x:Name="RegisterUsername" 
                         Height="40" 
                         Padding="10" 
                         Background="#2a2a3e" 
                         Foreground="White"
                         BorderBrush="#00ff88"
                         BorderThickness="2"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Email -->
                <TextBlock Text="Email:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,5"/>
                <TextBox x:Name="RegisterEmail" 
                         Height="40" 
                         Padding="10" 
                         Background="#2a2a3e" 
                         Foreground="White"
                         BorderBrush="#00ff88"
                         BorderThickness="2"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Telefon -->
                <TextBlock Text="Telefon:" Foreground="#00ff88" FontSize="12" Margin="0,0,0,5"/>
                <TextBox x:Name="RegisterPhone" 
                         Height="40" 
                         Padding="10" 
                         Background="#2a2a3e" 
                         Foreground="White"
                         BorderBrush="#00ff88"
                         BorderThickness="2"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Lösenord -->
                <TextBlock Text="Lösenord (min 6 tecken, 1 siffra, 1 stor bokstav, 1 specialtecken):" 
                           Foreground="#00ff88" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="RegisterPassword" 
                             Height="40" 
                             Padding="10" 
                             Background="#2a2a3e" 
                             Foreground="White"
                             BorderBrush="#00ff88"
                             BorderThickness="2"
                             Margin="0,0,0,20"
                             FontSize="14"/>

                <!-- Registrera Knapp -->
                <Button Content="REGISTRERA HJÄLTE ➜" 
                        Height="45" 
                        Background="#00ff88" 
                        Foreground="#1a1a2e" 
                        FontSize="14" 
                        FontWeight="Bold"
                        Click="RegisterButton_Click"
                        Cursor="Hand"
                        Margin="0,0,0,15"/>

                <!-- Felmeddelande -->
                <TextBlock x:Name="RegisterErrorMessage" 
                           Foreground="#ff4444" 
                           FontSize="12" 
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>